{
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "removeComments": true,
    "paths": {
      "@src/*": ["src/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
